<div class="container-fluid bg-light p-5">
  <h1 class="display-4">
    <%= @friend.first_name%>
    <%= @friend.last_name%>
  </h1>

  <hr>

  <p>
    <%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %>
  </p>

  <div>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary my-2" %> 
    <%= link_to "Back to friends", friends_path, class: "btn btn-dark my-2" %>

    <%= button_to "Delete this friend", @friend, method: :delete, class: "btn btn-secondary my-2" %>
  </div>
</div>


